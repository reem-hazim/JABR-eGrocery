<%- include('partials/head')%>
<body class="shoppingCart">
	<%- include('partials/navbar') %>
	<%- include('partials/flash') %>
	<div class="parallax"></div>
	<h1>
		Buy It Today. Get It Tomorrow.
	</h1>
	<div class="cartPage">
		<div class="small-container">
			<div class="cartCol">
				<% for (let item of user.shoppingCart) { -%>
					<div class="card">
						<div class="cartItem">	
							<div class="itemImg"><img src=<%=item.product.image%> alt="products"/></div>
							<div><h5>
								<a href="/products/<%=item.product._id%>">
									<%=item.product.name%>
								</a>
							</h5></div>
							<div><p>
								AED <%=item.product.price%>
								<% if (item.product.defWeight) { -%>
									per <%=item.product.defWeight%>
								<% } -%>
							</p></div>
							
							<div class="qty"><p>
								qty: <%=item.quantity%>
							</p></div>
						</div>
					</div>
				<% } -%>
			</div>
		</div>
		<div id="checkoutBox">
			<div class="card">
				<div class="card-body">
					<p>Item Cost: </p>
					<br>
					<br>
					<p>Shipping Cost: </p>
					<br>
					<br>
					<p>Total Cost: </p>
				</div>
				<div class="addToCart">
					<button class="block primary" type="submit"> 
						Check Out
					</button>
				</div>
			</div>
		</div>


	</div>
	
	<%- include('partials/footer') %>
	<script>
		var counter = Math.floor(Math.random() * 4);
		$(document).ready(function(){
			filePath = "url(/img/background" + counter + ".jpeg)";
			$(".parallax").css({"background-image":filePath});
		});
	</script>
</body>
</html>