            <span style="margin: 0">1</span>
            <span>2</span>
            <span>3</span>
            <span>4</span>
            <span>â†’ </span>
        </div> -->
    </div>

    <%- include('../partials/footer') %>

    <script>
        var counter = Math.floor(Math.random() * 4);
        $(document).ready(function(){
            filePath = "url(/img/background" + counter + ".jpeg)";
		    $(".parallax").css({"background-image":filePath});
        });
    </script>

</body>
</html>
